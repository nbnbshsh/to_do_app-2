<h2>TO DO App</h2>
<%= link_to 'TO DOリストの作成',new_task_path %>

<div class=task_c>
<% @tasks.each do |task|%>
  <p><%= task.task %>
  <div class="rating-box mt-3">
  <%= form_with model: @review,url: task_review_index_path(task),local: true do |f| %>
     <div class="main-rating">
       <div class="ratings mb-3">
         <span class="fa fa-star-o" id="star"></span>
         <span class="fa fa-star-o" id="star"></span>
         <span class="fa fa-star-o" id="star"></span>
         <span class="fa fa-star-o" id="star"></span>
         <span class="fa fa-star-o" id="star"></span>
       </div>
     </div>
     <%= f.hidden_field :score,id: "rating-value"%>
  <%end%>
  </div>
  
  <%= link_to "削除","/tasks/"+task.id.to_s,method: :delete %></p>
<% end %>
</div>